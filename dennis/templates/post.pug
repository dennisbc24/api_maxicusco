doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/css/styles.css")
		link(rel="stylesheet", href="/css/stylesPost.css")
		link(rel="stylesheet", href="/css/tablet.css", media="screen and (min-width:420px)")
		title Document
	body
		header
			div(class="logo")
				img(src="/icons/logo2.png", alt="Logo Maxi Cusco")
				h1 maxi cusco
			div(class="menu")
				img(src="/icons/menu.png", alt="Men√∫")
	main
		
		section(id="post")
			h1 Nuevo producto
			form(id="uploadImage", enctype="multipart/form-data")
				p Subir archivo
					input(id="file" type="file", name="foto")
				p Nombre
				input(width=300 type="text", name="nombre" id="nameInput")
				p Categoria
				label(for="selectCategory" width=300 type="text", name="categoria" id="categoryInput") Categoria
				select(id="selectCategory" name="listaCategory")
					option(value="cocina") cocina
				p Precio
				input(width=300 type="number", name="precio" id="priceInput")

				p(id="caracteristicas") Caracteristicas
				button(class="addCarac" id="addCarac") Agregar Caracteristica

				div(id="cajaCarac" class="cajaCarac")

					input(width=300 type="text", name="carac" class="caracInput")



				button(onclick="subirImagen()" class="finalizar") Finalizar
		section(id="articulos")

script(src="/JS/post.js")

